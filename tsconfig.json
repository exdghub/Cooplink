{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "modules": ["./app/modules"],
      "modules/*": ["./app/modules/*"],
      "core": ["./app/core"],
      "core/*": ["./app/core/*"],
      "shared": ["./app/shared"],
      "shared/*": ["./app/shared/*"],
      "assets": ["./assets"],
      "assets/*": ["./assets/*"]
    }
  },
  "exclude": ["node_modules/**/*"]
}
